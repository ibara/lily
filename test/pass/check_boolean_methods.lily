var total = 0, failed = 0

define ok(b: Boolean, s: String)
{
    total += 1

    if b == false: {
        stderr.write("Test {0} ({1}) failed.\n".format(total, s))
        failed += 1
    }
}

ok(true.to_i() == 1,        "Boolean.to_i() == 1.")
ok(false.to_i() == 0,       "Boolean.to_i() == 0.")

ok(true.to_s() == "true",   "Boolean.to_s() == 'true'.")
ok(false.to_s() == "false", "Boolean.to_s() == 'false'.")

if failed == 0:
    print("{0} of {0} tests passed.".format(total))
else:
    stderr.write("{0} tests have failed.\n".format(failed))
